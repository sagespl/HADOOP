    <build>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

        <pluginManagement>
            <plugins>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>3.0.2</version>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.7.0</version>
                    <configuration>
                        <source>${maven.compiler.source}</source>
                        <target>${maven.compiler.target}</target>
                    </configuration>
                </plugin>

                <!--Scala-->
                <plugin>
                    <groupId>net.alchim31.maven</groupId>
                    <artifactId>scala-maven-plugin</artifactId>
                    <version>${scala-maven-plugin.version}</version>
                    <configuration>
                        <source>${maven.compiler.source}</source>
                        <target>${maven.compiler.target}</target>
                    </configuration>
                    <executions>
                        <execution>
                            <id>scala-compile-first</id>
                            <phase>process-resources</phase>
                            <goals>
                                <goal>add-source</goal>
                                <goal>compile</goal>
                            </goals>
                        </execution>
                        <execution>
                            <id>scala-test-compile</id>
                            <phase>process-test-resources</phase>
                            <goals>
                                <goal>testCompile</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>${maven-assembly-plugin.version}</version>
                    <configuration>
                        <descriptorRefs>
                            <descriptorRef>jar-with-dependencies</descriptorRef>
                        </descriptorRefs>
                    </configuration>
                    <executions>
                        <execution>
                            <id>make-assembly</id>
                            <phase>package</phase>
                            <goals>
                                <goal>single</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>

                <!--Maven versions plugin-->
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>versions-maven-plugin</artifactId>
                    <version>${versions-maven-plugin.version}</version>
                </plugin>

            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>versions-maven-plugin</artifactId>
                <version>${versions-maven-plugin.version}</version>
            </plugin>
        </plugins>

    </build>

    <profiles>

        <profile>
            <id>sandbox</id>
            <properties>
                <fs.defaultFS>hdfs://sandbox.hortonworks.com:8020</fs.defaultFS>
                <hbase.zookeeper.quorum>sandbox.hortonworks.com</hbase.zookeeper.quorum>
                <zookeeper.znode.parent>/hbase-unsecure</zookeeper.znode.parent>
                <phoenix.connection>jdbc:phoenix:localhost:/hbase-unsecure</phoenix.connection>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>

        <profile>
            <id>hdp</id>
            <properties>
                <fs.defaultFS>hdfs://hdp1:8020</fs.defaultFS>
                <hbase.zookeeper.quorum>hdp1.hortonworks.com,hdp2.hortonworks.com,hdp3.hortonworks.com</hbase.zookeeper.quorum>
                <zookeeper.znode.parent>/hbase-unsecure</zookeeper.znode.parent>
                <phoenix.connection>jdbc:phoenix:hdp3:/hbase-unsecure</phoenix.connection>
            </properties>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
        </profile>

        <profile>
            <id>hdpoc</id>
            <properties>
                <fs.defaultFS>hdfs://hdpoc1:8020</fs.defaultFS>
                <hbase.zookeeper.quorum>hdpoc1.hortonworks.com,hdpoc2.hortonworks.com,hdpoc3.hortonworks.com</hbase.zookeeper.quorum>
                <zookeeper.znode.parent>/hbase-unsecure</zookeeper.znode.parent>
                <phoenix.connection>jdbc:phoenix:hdpoc3:/hbase-unsecure</phoenix.connection>
            </properties>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
        </profile>

        <profile>
            <id>aws</id>
            <properties>
                <fs.defaultFS>hdfs://aws1:8020</fs.defaultFS>
                <hbase.zookeeper.quorum>ec2-34-200-219-175.compute-1.amazonaws.com</hbase.zookeeper.quorum>
                <zookeeper.znode.parent>/hbase</zookeeper.znode.parent>
                <phoenix.connection>jdbc:phoenix:aws3:/hbase-unsecure</phoenix.connection>
            </properties>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
        </profile>

    </profiles>

